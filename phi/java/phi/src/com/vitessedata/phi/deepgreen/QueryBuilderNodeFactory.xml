<?xml version="1.0" encoding="UTF-8"?>
<knimeNode icon="./default.png" type="Manipulator" xmlns="http://knime.org/node/v2.8" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://knime.org/node/v2.10 http://knime.org/node/v2.10.xsd">
    <name>QueryBuilder</name>
    
    <shortDescription>
    Build SQL Query from inputs.        
    </shortDescription>
    
    <fullDescription>
        <intro>This node build a SQL query from input SQL.  Input query is represented as $1 and $2 (optional).
        </intro>
    </fullDescription>
    
    <ports>
        <inPort index="0" name="First (Left) Input Table $1"> 
        	Database connection with wrapped SQL query. 
        </inPort>
        <inPort index="1" name="Second (Right) Input Table $2"> 
        	Database connection with wrapped SQL query. 
        </inPort>
        <outPort index="0" name="Query"> Query built </outPort> 
    </ports>    
</knimeNode>
